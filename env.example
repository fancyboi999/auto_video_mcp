# API配置
FLYWORKS_API_TOKEN=your_api_token_here
FLYWORKS_API_BASE_URL=https://hfw-api.hifly.cc/api/v2/hifly

# 爬虫配置
FIRECRAWL_API_KEY=your_api_here

# 配置不可用工具
DISABLED_TOOLS=tool_a,tool_b,tool_c  
#示例配置： 
# DISABLED_TOOLS=get_baidu_trending,crawl_website

# 目标rss连接
TRENDS_HUB_CUSTOM_RSS_URL=your_target_rss_url

# 数据库配置
# SQLite (默认)
DATABASE_URL=sqlite+aiosqlite:///./hifly.db
# PostgreSQL 示例
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/hifly

# 数据库连接池设置
DB_ECHO=false
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=1800

# 服务器配置
SERVER_HOST=127.0.0.1
SERVER_PORT=8000
SERVER_PATH=/mcp/
SERVER_LOG_LEVEL=info

# 任务配置
TASK_CHECK_INTERVAL=60
TASK_MAX_RETRY=3 